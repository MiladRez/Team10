<% include ./partials/header %>
    <link rel="stylesheet" type="text/css" href="/stylesheets/login_page.css"/>
    <title>Login</title>
</head>
<body>
    <form action="/signup">
    	<button class="ui right floated button" id="sign_up" type="submit">Sign up</button>
    </form>
    
    <div id="title_strip">
        <center> <a href="/"><h1>Team 10 Schedule</h1></a> </center>
    </div> 
    
    <form id="main_form" action="/login" method="post">
    	<table>
    		<tbody>
    			<tr>
    				<td><input id="username" type="text" name="username" placeholder="Username" required></td>
    			</tr>
    			<tr>
    				<td><input id="password" type="password" name="password" placeholder="Password" required></td>
    			</tr>
    			<tr>
    				<td><button class="massive ui button" id="login" type="submit">Login</button></td>
    			</tr>
    			<tr>
    				<td><a href="http://www.google.ca" id="forgot_password">Forgot your password?</a></td>
    			</tr>
    		</tbody>
    	</table>
    </form>
<% include ./partials/footer %>
